// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ðŸ‘‡ Yaha apna model define karenge
model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
}

model newUser {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String 
  email String @unique
  hobbies String[] 
}
